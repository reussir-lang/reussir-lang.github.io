---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import HeroSection from "../components/HeroSection.astro";
import FeatureCards from "../components/FeatureCards.astro";
import Divider from "../components/Divider.astro";
import CompilationObservatory from "../components/CompilationObservatory.astro";
import BackendOptimization from "../components/BackendOptimization.astro";
import CodegenQuality from "../components/CodegenQuality.astro";
import CodeShowcase3D from "../components/CodeShowcase3D.astro";
import AiViewAndPeople from "../components/AiViewAndPeople.astro";
import Footer from "../components/Footer.astro";
import "../styles/app.css";
---

<Layout title="Reussir | coming soon">
  <div class="relative min-h-screen bg-slate-950 text-slate-100">
    <div class="science-grid absolute inset-0 opacity-50"></div>
    <div class="hero-aurora absolute left-[-8rem] top-[-8rem] h-[28rem] w-[28rem] rounded-full blur-3xl"></div>
    <div class="hero-aurora-2 absolute bottom-[-10rem] right-[-10rem] h-[30rem] w-[30rem] rounded-full blur-3xl"></div>
    <div class="hero-aurora-3 absolute left-[40%] top-[45%] h-[24rem] w-[24rem] rounded-full blur-3xl"></div>

    <Navbar />

    <main class="relative mx-auto flex w-full max-w-6xl flex-col gap-12 px-5 pb-20 pt-8 md:px-8 md:pt-12">
      <HeroSection />
      <FeatureCards />
      <Divider />
      <CompilationObservatory />
      <BackendOptimization />
      <CodegenQuality />
      <Divider color="purple" />
      <CodeShowcase3D />
      <Divider />
      <AiViewAndPeople />
    </main>

    <Footer />
  </div>
</Layout>
